
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        },
        "lastSeen": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user was last active."
        }
      },
      "required": ["email"]
    },
    "Photosheet": {
      "title": "Photosheet",
      "type": "object",
      "description": "Represents a generated photosheet record.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user who owns this photosheet."
        },
        "thumbnailUrl": {
          "type": "string",
          "format": "uri",
          "description": "The data URI of the first uploaded image for thumbnail purposes."
        },
        "copies": {
          "type": "number",
          "description": "Number of photos on the sheet."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the photosheet was created."
        }
      },
      "required": ["userId", "copies", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "User profile documents, keyed by user ID."
    },
    "/users/{userId}/photosheets/{photosheetId}": {
        "schema": {
            "$ref": "#/entities/Photosheet"
        },
        "description": "Subcollection for storing a user's generated photosheets."
    }
  }
}
